<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tv_animalPhoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        tools:src="@tools:sample/avatars"
        android:layout_marginRight="16dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_animalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/animal_name" />
        <TextView
            android:id="@+id/tv_latinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/latin_name"/>
        <TextView
            android:id="@+id/tv_animalFamili"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/animal_famili"/>
    </LinearLayout>
</LinearLayout>